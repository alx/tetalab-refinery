<% BlogPost.live.includes(:comments, :categories).all.each do |post| %>
  <%= link_to post.title, blog_post_url(post) %>
  <time datetime="<%=l post.published_at.to_date, :format => :default %>">
  <%= t('created_at', :scope => 'blog.shared.posts', :when => l(post.published_at.to_date, :format => :short)) %>
  </time>
<% end %>
